 $(XAWPROGS): %: %.o
-	$(CC) $^ $(XAWLIBS) -o $@
+	$(CC) $(CFLAGS) $(LDFLAGS) $^ $(XAWLIBS) -o $@
 
 $(X11PROGS): %: %.o
-	$(CC) $^ $(X11LIBS) -o $@
+	$(CC) $(CFLAGS) $(LDFLAGS) $^ $(X11LIBS) -o $@
 
 $(ETCPROGS): %: %.o
-	$(CC) $^ -o $@
+	$(CC) $(CFLAGS) $(LDFLAGS) $^ -o $@
 
