Respect user LDFLAGS, fix underlinking

http://bugs.gentoo.org/show_bug.cgi?id=237698
http://bugs.gentoo.org/show_bug.cgi?id=367695

--- src/Makefile
+++ src/Makefile
@@ -49,7 +49,7 @@
 all: $(PROG)
 
 $(PROG): $(OBJS)
-	$(CC) $(OBJS) $(LDPATH) $(LIBS) -o $@
+	$(CC) $(CFLAGS) $(LDFLAGS) $(OBJS) $(LDPATH) $(LIBS) -o $@
 
 $(OBJS): %.o: %.c $(HEADERS)
 	$(CC) $(CFLAGS) $(DEFINES) $(INCLUDES) -c $< -o $@
--- clients/Makefile
+++ clients/Makefile
@@ -48,16 +48,16 @@
