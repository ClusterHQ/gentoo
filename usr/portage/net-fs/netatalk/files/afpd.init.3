command="/usr/sbin/${SVCNAME}"
command_args="${EXTRA_CONF}"
pidfile="/var/run/${SVCNAME}.pid"

depend() {
	need net cnid_metad
	use logger dns atalkd
	after entropy

	config /etc/netatalk/afpd.conf

	sed -e 's:#.*::' /etc/netatalk/afpd.conf | fgrep -q -e -ddp \
		&& need atalkd

	need avahi-daemon
	need slpd
}
